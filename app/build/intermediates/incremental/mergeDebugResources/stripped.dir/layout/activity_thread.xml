<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ThreadActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mThreadPoolExecute"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="基本线程池"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mFixedPoolThread"
        app:layout_constraintTop_toBottomOf="@+id/mThreadPoolExecute"
        app:layout_constraintStart_toStartOf="parent"
        android:text="可重用固定线程数线程池"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mCachedPoolThread"
        app:layout_constraintTop_toBottomOf="@+id/mFixedPoolThread"
        app:layout_constraintStart_toStartOf="parent"
        android:text="按需创建线程池"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mSinglePoolExecute"
        app:layout_constraintTop_toBottomOf="@+id/mCachedPoolThread"
        app:layout_constraintStart_toStartOf="parent"
        android:text="单个核线线程池"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mScheduledTheadPool"
        app:layout_constraintTop_toBottomOf="@+id/mSinglePoolExecute"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Scheduled线程池"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mMyPriorityTheadPool"
        app:layout_constraintTop_toBottomOf="@+id/mScheduledTheadPool"
        app:layout_constraintStart_toStartOf="parent"
        android:text="队列中有优先级比较的线程池"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/canCancel"
        app:layout_constraintTop_toBottomOf="@+id/mMyPriorityTheadPool"
        app:layout_constraintStart_toStartOf="parent"
        android:text="可以取消的"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>